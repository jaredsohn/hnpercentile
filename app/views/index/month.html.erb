<div id="content">
  <h1>Users registered in <%= @month.capitalize %> <%= @year %></h1>
  <a href="<%= @prev_month_link %>"><%= @prev_month %></a> - 
  <a href="/">Home</a> - 
  <a href="<%= @next_month_link %>"><%= @next_month %></a>
  <p>
    <%= number_with_precision(@percent_of_total_by_users) %>% of entire site by users<br>
    <%= number_with_precision(@percent_of_total_by_karma) %>% of entire site by karma
  </p>
  <ol id="userlist">
  <% @members.each do |member| %>
    <li>
      <div class="username"><a href="/user/<%= member.username %>"><%= member.username %></a> <span class="parenthesis">(<%= member.karma %>)</span></div>
      <div class="bar" style="width: <%= member.get_width(@max_karma) %>%">&nbsp;</div>
    </li>
  <% end %>
  </ol>
</div>
