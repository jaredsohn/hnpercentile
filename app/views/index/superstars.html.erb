<div id="content">
  <h1>Karma Superstars</h1>
  <a href="/">Home</a>
  <ol id="userlist">
  <% @members.each do |member| %>
    <li>
      <div class="username">
      <%= member.username %> <span class="parenthesis">(<%= number_with_precision(member.karma_per_day) %> per day)</span>
      </div>
      <div class="bar" style="width: <%= member.karma_per_day / @max_karma_per_day.to_f * 100 %>%">&nbsp;</div>
    </li>
  <% end %>
  </ol>
</div>
